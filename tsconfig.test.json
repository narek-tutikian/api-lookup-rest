{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@middlewares/*": ["middlewares/*"],
      "@repositories/*": ["repositories/*"],
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"],
      "@test/*": ["test/*"]
    },
    "resolveJsonModule": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
